# GUARDIAN Configuration
# Copy this to .env and fill in your values

# ============================================
# REQUIRED
# ============================================

# Anthropic API Key (for Claude Opus)
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# NETWORK (choose one)
# ============================================

NETWORK=devnet
# NETWORK=mainnet-beta

# Solana RPC URL
SOLANA_RPC_URL=https://api.devnet.solana.com
# For mainnet with Helius (recommended):
# SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_KEY

# Wallet path (will be created if doesn't exist)
WALLET_PATH=./wallet.json

# ============================================
# OPTIONAL - Enhanced Monitoring
# ============================================

# Helius API Key (for better RPC and webhooks)
HELIUS_API_KEY=
HELIUS_WEBHOOK_SECRET=

# ============================================
# OPTIONAL - Alert Channels
# ============================================

# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord Webhook
DISCORD_WEBHOOK_URL=

# ============================================
# AGENT SETTINGS
# ============================================

# Claude model for analysis
MODEL=claude-sonnet-4-20250514

# How often agents scan (seconds)
SCAN_INTERVAL_SECONDS=30

# Minimum confidence to take action (0-1)
MIN_THREAT_CONFIDENCE=0.6

# Max entries in agent memory
MAX_MEMORY_ENTRIES=1000

# Max tokens for Claude responses
MAX_TOKENS=4096

# ============================================
# API SERVER
# ============================================

API_HOST=0.0.0.0
API_PORT=8000
